{% if section.settings.footer_mid_enable %}
<div class="footer-middle" id="footer-middle">
  <div class="container">
    <div class="row method-box-wrapper">
      {% for block in section.blocks %}
      {%- case block.type -%}
      {%- when 'service' -%}
      <div class="col-lg-{{ block.settings.service_coloum }} col-md-6" id="block-{{ block.id }}">
        <div class="method-box">
          {% if block.settings.service_title != '' %}
          <h4>{{ block.settings.service_title }}</h4>
          {% endif %}
          {% if block.settings.service_description != '' %}
          <p>{{ block.settings.service_description }}</p>
          {% endif %}
        </div>
      </div>
      {%- endcase -%}
      {% endfor %}

    </div>
  </div>
</div>
{% endif %}

<style>
  
  
  .method-box-wrapper > [class*="col"]:not(:last-child) .method-box:after{
    background-color: {{ section.settings.service_border_right_color }};
}
  
  
  {% for block in section.blocks %}
      {%- case block.type -%}
      {%- when 'service' -%}
  
  #block-{{ block.id }} .method-box h4 {
    color: {{ block.settings.service_title_color }};
  }
  #block-{{ block.id }} .method-box p {
    color: {{ block.settings.service_description_color }};
  }

  
      {%- endcase -%}
      {% endfor %}
  


  #section-{{ section.id }} #footer-middle.footer-middle {
    background-color: {{ section.settings.bg_color_2 }};
  }

  
    #section-{{ section.id }} #footer-middle.footer-middle{
    padding-top:{{ section.settings.section_padding_top_2 }}rem;
  }

  #section-{{ section.id }} #footer-middle.footer-middle{
    padding-bottom:{{ section.settings.section_padding_bottom_2 }}rem;
  }


  @media (min-width: 768px) and (max-width: 991px){

   #section-{{ section.id }} #footer-middle.footer-middle{
      padding-top:{{ section.settings.section_padding_top_md_2 }}rem;
    }

    #section-{{ section.id }} #footer-middle.footer-middle{
      padding-bottom:{{ section.settings.section_padding_bottom_md_2 }}rem;
    }

  }
  @media (max-width: 767px) {

    #section-{{ section.id }} #footer-middle.footer-middle{
      padding-top:{{ section.settings.section_padding_top_xs_2 }}rem;
    }

    #section-{{ section.id }} #footer-middle.footer-middle{
      padding-bottom:{{ section.settings.section_padding_bottom_xs_2 }}rem;
    }
  }

  
</style> 