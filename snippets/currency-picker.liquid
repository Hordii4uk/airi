
<div class="header-component__item header-component__currency switcher-currency-trigger currency">
  <a href="#">{{ section.settings.currency_title }} <span class="current-currency">{{ shop.currency }}</span></a>
  {% assign currency = settings.supported_currencies | split: '|' %}
  <ul class="header-component__menu">
    {% for value in currency %}
    {% assign array = value | split: ',' %}
    {% assign iso_4217 = array[0] | upcase | strip %}
    {% assign name = array[1] | strip %}
    <li data-currency="{{ iso_4217 }}" class="currency__item"><a style="cursor: pointer">{{ name }}</a></li>
    {% endfor %}
  </ul>
</div>