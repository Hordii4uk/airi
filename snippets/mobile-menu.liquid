<!-- Mobile Navigation Start Here -->
<div class="mobile-navigation dl-menuwrapper mobile" id="dl-menu">
  <button class="dl-trigger">Open Menu</button>
  <ul class="dl-menu">
    {% for l in linklists.main-menu.links %}
    {% assign submenu = l.title | handleize %}

    {% if settings.mega_title == l.title %}
    <li>
      <a href="{{ l.url }}">
        <span>{{ l.title }}</span>
      </a>

      <ul class="dl-submenu">

        {% if settings.mega_col1_linklist != "" %}
        {% assign list = linklists[settings.mega_col1_linklist] %}
        <li>
          <a href="{{ list.url }}">
            <span>{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span>{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}

        {% if settings.mega_col2_linklist != "" %}
        {% assign list = linklists[settings.mega_col2_linklist] %}
        <li>
          <a href="{{ list.url }}">
            <span>{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span>{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}

        {% if settings.mega_col3_linklist != "" %}
        {% assign list = linklists[settings.mega_col3_linklist] %}
        <li>
          <a href="{{ list.url }}">
            <span>{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span>{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}

        {% if settings.mega_col4_linklist != "" %}
        {% assign list = linklists[settings.mega_col4_linklist] %}
        <li>
          <a href="{{ list.url }}">
            <span>{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span>{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
      </ul>
    </li>

    {% elsif settings.mega_title_2 == l.title %}
    <li>
      <a href="{{ l.url }}">
        <span>{{ l.title }}</span>
      </a>
      <ul class="dl-submenu">
        {% if settings.mega_col5_linklist != "" %}
        {% assign list = linklists[settings.mega_col5_linklist] %}
        <li>
          <a href="{{ list.url }}">
            <span>{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span>{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        {% if settings.mega_col6_linklist != "" %}
        {% assign list = linklists[settings.mega_col6_linklist] %}
        <li  class="mega-menu-tree">
          <a class="megamenu-title" href="{{ list.url }}">
            <span class="mm-text">{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span class="mm-text">{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        {% if settings.mega_col7_linklist != "" %}
        {% assign list = linklists[settings.mega_col7_linklist] %}
        <li>
          <a href="{{ list.url }}">
            <span>{{ list.title }}</span>
          </a>
          <ul class="dl-submenu">
            {% for link in list.links %}
            <li>
              <a href="{{ link.url }}">
                <span>{{ link.title }}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}

        {% if settings.mega_col8_linklist != "" %}
        {% assign list = linklists[settings.mega_col8_linklist] %}
        <li>
          <a href="{{ settings.banner_img_url }}"><img src="{% if settings.banner_img %}{{ settings.banner_img | img_url: 'master' }}{% endif %}"></a>
        </li>
        {% endif %}
      </ul>
    </li>
	{% elsif linklists[submenu].links.size > 0 %}
    <li>
      <a href="{{ l.url }}">
        <span>{{ l.title }}</span>
      </a>
      <ul class="dl-submenu">
        {% for l in linklists[submenu].links %}
        {% include 'navigation-sub-links' with forloop.index %}
        {% endfor %}
      </ul>
    </li>
    {% else %}
    <li>
      <a href="{{ l.url }}">
        <span>{{ l.title }}</span>
      </a>
    </li>
    {% endif %}
    {% endfor %}
    
    {% comment  %}
    <li>
      <a href="{{ link.url }}">
        {{ link.title }}
      </a>
      <ul class="dl-submenu">
        {% for childlink in linklists[child_list_handle].links %}
        {% assign grand_childlist_handle = childlink.title | handleize %}
        {% if linklists[grand_childlist_handle] and linklists[grand_childlist_handle].links.size > 0 %}
        <li>
          <a class="megamenu-title" href="{{ childlink.url }}">
            {{ childlink.title }}
          </a>
          <ul class="dl-submenu">
            {% for grand_childlist_handle in linklists[grand_childlist_handle].links %}
            <li>
              <a href="{{grand_childlist_handle.url}}">
                {{grand_childlist_handle.title}}
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% elsif childlink.type == "collection_link" and childlink.object.image %}
        <li>
          <a href="{{childlink.url}}"><img src="{{ childlink.object.image | img_url: 'large' }}"></a>
        </li>
        {% else %}
        <li><a class="megamenu-title" href="{{ childlink.url }}">{{ childlink.title }}</a></li>
        {% endif %}
        {% endfor %}
      </ul>
    </li>
    
    <li>
      <a href="{{ link.url }}">
        {{ link.title }}
      </a>
    </li>
    {% endcomment %}
    
  </ul>
</div>
<!-- Mobile Navigation End Here -->


<style>
  
#section-{{ section.id }}  .mobile.mobile-navigation ul li a {
    color: {{ section.settings.mobile_menu_color }};
}
  #section-{{ section.id }}  .mobile.mobile-navigation ul li a:hover {
    color: {{ section.settings.mobile_menu_hover_color }};
}
  
</style>
  
  
  
  
  
  
  
  
  
  