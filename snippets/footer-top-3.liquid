{% if section.settings.footer_top_enable %}
<div class="row align-items-center footer-top" id="footer-top">
  <div class="col-md-3 text-center text-md-left">
    <div class="footer-widget mb--15">
      <div class="textwidget">
         {%- if section.settings.footer_top_logo -%}
        <a href="/"  class="footer-logo">
          <img src="{{ section.settings.footer_top_logo | img_url: '300x300' }}" alt="{{ section.settings.footer_top_logo.alt | default: shop.name }}"  class="mb--10">
        </a>
        {%- else -%}
        <a href="/"  class="footer-logo">
          {{ shop.name }}
        </a>
        {%- endif -%}
      </div>
    </div>
  </div>
  <div class="col-md-6 text-center">
    <div class="footer-widget mb--15">
      <ul class="contact-info contact-info--2">
        {% if section.settings.contact_ph_nubmer %}
        <li class="contact-info__item">
           {% if section.settings.contact_icon_1 %}
          <i class="fa fa-{{ section.settings.contact_icon_1 }}"></i>
           {% endif %}
          <span><a href="{{ section.settings.contact_ph_nubmer }}" class="contact-info__link">{{ section.settings.contact_ph_nubmer }}</a></span>
        </li>
        {% endif %}
         {% if section.settings.contact_email %}
        <li class="contact-info__item">
          {% if section.settings.contact_icon_2 %}
          <i class="fa fa-{{ section.settings.contact_icon_2 }}"></i>
           {% endif %}
          <span><a href="{{ section.settings.contact_email }}" class="contact-info__link">{{ section.settings.contact_email }}</a></span>
        </li>
         {% endif %}
         {% if section.settings.contact_address %}
        <li class="contact-info__item">
           {% if section.settings.contact_icon_3 %}
          <i class="fa fa-{{ section.settings.contact_icon_3 }}"></i>
           {% endif %}
          <span>{{ section.settings.contact_address }}</span>
        </li>
         {% endif %}
      </ul>
    </div>
  </div>
  <div class="col-md-3 text-center text-md-right">
    <!-- Social Icons Start Here -->
    <ul class="social social-small">
      {% include 'footer-social-area' %}
    </ul>
    <!-- Social Icons End Here -->
  </div>
</div>

{% endif %}


<style>

  

 #section-{{ section.id }}  #footer-top.footer-top .footer-widget .contact-info--2 .contact-info__item{
    color: {{ section.settings.icon_2_color }};
}
  
  #section-{{ section.id }} #footer-top.footer-top .footer-widget .contact-info__item a{
    color: {{ section.settings.content_2_color }};
}
  
  
   #section-{{ section.id }} #footer-top.footer-top .social-small .social__link{
    color: {{ section.settings.icon_color }};
  }
    #section-{{ section.id }} #footer-top.footer-top .social-small .social__link:hover{
    color:  {{ section.settings.icon_hover_color }};
  }
  
  
  
  
    #section-{{ section.id }} #footer-top.footer-top {
    background-color: {{ section.settings.bg_color_1 }};
  }

  #section-{{ section.id }} #footer-top.footer-top{
    padding-top:{{ section.settings.section_padding_top_1 }}rem;
  }

  #section-{{ section.id }} #footer-top.footer-top{
    padding-bottom:{{ section.settings.section_padding_bottom_1 }}rem;
  }


  @media (min-width: 768px) and (max-width: 991px){

   #section-{{ section.id }} #footer-top.footer-top{
      padding-top:{{ section.settings.section_padding_top_md_1 }}rem;
    }

    #section-{{ section.id }} #footer-top.footer-top{
      padding-bottom:{{ section.settings.section_padding_bottom_md_1 }}rem;
    }

  }
  @media (max-width: 767px) {

    #section-{{ section.id }} #footer-top.footer-top{
      padding-top:{{ section.settings.section_padding_top_xs_1 }}rem;
    }

    #section-{{ section.id }} #footer-top.footer-top{
      padding-bottom:{{ section.settings.section_padding_bottom_xs_1 }}rem;
    }
  }
  
  
  
</style> 
