<div class="contact-info-widget two-column-list sm-one-column mb--45 mb-sm--35">
  <div class="contact-info mb-sm--35">
    <h3>{{ section.settings.store_title_3 }}</h3>
    <p>{{ section.settings.store_description_3 }}</p>
  </div>
  <div class="contact-info">
    <h3>{{ section.settings.store_title_4 }}</h3>
    <p>{{ section.settings.store_description_4 }}</p>
  </div>
</div>
<!-- Contact info widget end here -->
{% endif %}
