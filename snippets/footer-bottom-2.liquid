{% if section.settings.footer_bottom_enable_2 %}
<div class="footer-bottom footer-bottom-2" id="footer-bottom">
  <div class="container-fluid">
    <div class="row align-items-center justify-content-sm-center">
      <div class="col-lg-4 col-md-6 mb-md--10">
           {%- if settings.newsletter_system == 'by_shopify_form' -%}
            {%- assign formId = 'Contact_' | append: section.id -%}
            {%- form 'customer', id: formId -%}
            {%- if form.posted_successfully? -%}
            <p class="form-message form-message--success form-success">{{ 'general.newsletter_form.confirmation'| t }}</p>
            {%- else -%}
            {%- if form.errors -%}
            <div class="form-message form-message--error">
              {{ form.errors | default_errors }}
            </div>
            {%- endif -%}
            <div class="newsletter-form newsletter-form--2 mc-form center-sm">
              <div id="mc_embed_signup_scroll" class="mc-form">
                <div class="mc-form subscribe-form" >
                  <input class="input_text  newsletter-form__input email" type="hidden" name="contact[tags]" value="newsletter">
                  <input class="input_text newsletter-form__input email" type="email" name="contact[email]" id="Email" value="{% if customer %}{{ customer.email }}{% endif %}"
                         placeholder="{{ 'general.newsletter_form.newsletter_email'| t }}" aria-label="{{ 'general.newsletter_form.newsletter_email'| t }}" {% if form.errors %}aria-invalid="true"{% endif %} autocorrect="off" autocapitalize="off">
                  <button type="submit" name="commit" id="Subscribe" class="newsletter-form__submit">{{ section.settings.newslatter_button_title }}</button>
                </div>
              </div>
            </div>
            {%- endif -%}
            {%- endform -%}
            {%- elsif settings.newsletter_system == 'by_mailchimp' -%}
             <form action="{{ settings.newsletter_action }}" class="newsletter-form newsletter-form--2 mc-form center-sm" method="post" id="mc-embedded-subscribe-form"  name="mc-embedded-subscribe-form" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll" class="mc-form">
              <div id="mc-form" class="mc-form subscribe-form" >
                <input type="email" value="" name="EMAIL" class="newsletter-form__input email" id="mce-EMAIL" placeholder="Enter your email address" required>
                <button type="submit" id="mc-submit" class="newsletter-form__submit">{{ section.settings.newslatter_button_title }}</button>
              </div>
            </div>
          </form>
            {%- endif -%}
      </div>
      <div class="col-lg-5 text-lg-right text-center mb-md--10">
        <ul class="footer-menu">
          {% assign footer_menu = section.settings.footer_menu_bottom_handle %}
          {% for link in linklists[footer_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="col-lg-3 text-lg-right text-{% if section.settings.text_style == 'text_style_left' %}left{% elsif section.settings.text_style == 'text_style_center' %}center{% elsif section.settings.text_style == 'text_style_right' %}right{% endif %}">
        <div class="copyright-text">{{ section.settings.copy_ritht_text }}</div>
      </div>
    </div>
  </div>
</div>

{% endif %}


<style>

  
   #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 .copyright-text p{
  	color:  {{ section.settings.Copy_right_color }};
  }
  
    #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 .copyright-text p a{
  	color:  {{ section.settings.Copy_anchor_color }};
  }
  
   #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 .copyright-text p a:hover{
  	color:  {{ section.settings.Copy_anchor_hover_color }};
  }
  
  #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 .footer-menu li a{
    color: {{ section.settings.menu_color_2 }};
}
   #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 .footer-menu li a:hover{
    color: {{ section.settings.menu_hover_color_2 }};
}
  
  #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 .newsletter-form--2 .newsletter-form__input{
    color: {{ section.settings.input_text_color }};
        border-color: {{ section.settings.input_border_color }};
}
  
  #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2   .newsletter-form__submit {
    color: {{ section.settings.input_button_color }};
}
  
  #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2  .newsletter-form--2 .newsletter-form__submit:hover{
    color: {{ section.settings.input_button_hover_color }};
}

  
  #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2 {
    background-color: {{ section.settings.bg_color_4 }};
}
     #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2{
    padding-top:{{ section.settings.section_padding_top_5 }}rem;
  }

  #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2{
    padding-bottom:{{ section.settings.section_padding_bottom_5 }}rem;
  }


  @media (min-width: 768px) and (max-width: 991px){

    #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2{
      padding-top:{{ section.settings.section_padding_top_md_5 }}rem;
    }

    #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2{
      padding-bottom:{{ section.settings.section_padding_bottom_md_5 }}rem;
    }

  }
  @media (max-width: 767px) {

    #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2{
      padding-top:{{ section.settings.section_padding_top_xs_5 }}rem;
    }

    #section-{{ section.id }} #footer-bottom.footer-bottom.footer-bottom-2{
      padding-bottom:{{ section.settings.section_padding_bottom_xs_5 }}rem;
    }
  }

  
</style> 