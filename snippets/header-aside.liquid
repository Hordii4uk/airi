
<div class="header-aside__inner">
  <div class="header-aside__top d-flex align-items-center mb--5">
    {%- include 'header-logo-3' -%}
    {% if section.settings.side_menu_enable %}
    <!-- Header Toolbar Start Here -->
    <ul class="header-toolbar text-right ml--10">
      <li class="header-toolbar__item">
        <a href="#sideNav" class="toolbar-btn">
          <i class="dl-icon-menu2"></i>
        </a>                                    
      </li>
    </ul>
    <!-- Header Toolbar Start Here -->
    {% endif %}

  </div>

