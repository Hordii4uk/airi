{% if section.settings.footer_top_enable %}
<div class="row footer-top" id="footer-top">
  <div class="col-md-4">
    <!-- Social Icons Start Here -->
    <ul class="social social-small">
      {% include 'footer-social-area' %}
    </ul>
    <!-- Social Icons End Here -->
  </div>
  <div class="col-md-4 text-md-text-{% if section.settings.text_style == 'text_style_left' %}left{% elsif section.settings.text_style == 'text_style_center' %}center{% elsif section.settings.text_style == 'text_style_right' %}right{% endif %} mtb--5">
    <div class="copyright-text">{{ section.settings.copy_ritht_text }}</div>
  </div>
  <div class="col-md-4 text-md-right">
    <img src="{% if section.settings.payment_logo_bottom %}{{ section.settings.payment_logo_bottom | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/470x33{% endif %}" alt="{{ payment_logo_bottom.alt }}">
  </div>
</div>

{% endif %}



<style>

  
  
       #section-{{ section.id }} #footer-top.footer-top .social-small .social__link{
    color: {{ section.settings.icon_color }};
  }
     #section-{{ section.id }} #footer-top.footer-top .social-small .social__link:hover{
    color:  {{ section.settings.icon_hover_color }};
  }
  
         #section-{{ section.id }} #footer-top.footer-top  .copyright-text p{
  	color:  {{ section.settings.Copy_right_color }};
  }
  
  
    #section-{{ section.id }} #footer-top.footer-top  .copyright-text p a{
  	color:  {{ section.settings.Copy_anchor_color }};
  }
  
    #section-{{ section.id }} #footer-top.footer-top .copyright-text p a:hover{
  	color:  {{ section.settings.Copy_anchor_hover_color }};
  }

  
      #section-{{ section.id }} #footer-top.footer-top {
    background-color: {{ section.settings.bg_color_1 }};
  }

  #section-{{ section.id }} #footer-top.footer-top{
    padding-top:{{ section.settings.section_padding_top_1 }}rem;
  }

  #section-{{ section.id }} #footer-top.footer-top{
    padding-bottom:{{ section.settings.section_padding_bottom_1 }}rem;
  }


  @media (min-width: 768px) and (max-width: 991px){

   #section-{{ section.id }} #footer-top.footer-top{
      padding-top:{{ section.settings.section_padding_top_md_1 }}rem;
    }

    #section-{{ section.id }} #footer-top.footer-top{
      padding-bottom:{{ section.settings.section_padding_bottom_md_1 }}rem;
    }

  }
  @media (max-width: 767px) {

    #section-{{ section.id }} #footer-top.footer-top{
      padding-top:{{ section.settings.section_padding_top_xs_1 }}rem;
    }

    #section-{{ section.id }} #footer-top.footer-top{
      padding-bottom:{{ section.settings.section_padding_bottom_xs_1 }}rem;
    }
  }
  
  
  
  
  
</style> 
